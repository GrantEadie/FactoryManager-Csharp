@{
  Layout = "_Layout";
}
@model FactoryManager.Models.Engineer
<h2>Are you sure you want to delete this <span style="font-weight:900">engineer</span> from the records?</h2>
<hr><br>
<div class="row">
  <div class="col-sm">

      <h3>@Html.DisplayFor(model => model.EngineerName)</h3>
      @using (Html.BeginForm())
      {
        <br>
        <input type="submit" value="Delete" class="btn btn-outline-danger btn-block btn-sm"/>
      }
      <br>
      <p>@Html.ActionLink("Cancel", "Details", null, new {id = Model.EngineerId}, new {@class="btn btn-outline-warning btn-block btn-sm"})</p>
  </div>
  <div class="col-sm">
  </div>
  <div class="col-sm">
  </div>
</div>
