@{
  Layout = "_Layout";
}

@model FactoryManager.Models.Incident;
<br><br>
<h4>add a new incident</h4><hr> 
<div class="row">
  <div class="col-sm">

    @using (Html.BeginForm())
    {
        @Html.Label("Call Tag")
        <br>
        @Html.TextBoxFor(model => model.IncidentTitle, new {@required="required", @style="width:100%"})
        <br><br>
        @Html.Label("Full Description")
        <br>
        @Html.TextAreaFor(model => model.IncidentDamage, new {@required="required", @style="width:100%"})
        <br><br>
        @Html.Label("Location")
        <br>
        @Html.DropDownList("LocationId", null, new { @class="form-control"})<br>
        @Html.Label("Engineer involved")
        <br>
        @Html.DropDownList("EngineerId", null, new { @class="form-control"})<br>
        @Html.Label("Machine involved")
        <br>
        @Html.DropDownList("MachineId", null, new { @class="form-control"})
        <br><br><br>
        <input type="submit" value="Add New Incident" class="btn btn-outline-dark btn-block btn-sm" />
    }
    <br>
    <p>@Html.ActionLink("Cancel", "Index", null, null, new {@class="btn btn-outline-warning btn-block btn-sm"})</p>
  </div>
  <div class="col-sm">

    </div>
    <div class="col-sm">
    </div>
</div>